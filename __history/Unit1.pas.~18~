procedure TForm1.btn_deletarClick(Sender: TObject);
var
  i:Integer;
  variavel:string;
  updateDel:string;

begin
   if MessageDlg ('Tem certeza que deseja excluir a informacao?',mtConfirmation,[mbYes,mbNo],0)= mrYes then begin
     variavel := dbRegistros.Columns[0].Field.Value;
     with ADOQuery1 do
      Begin
        Close;
        SQL.Clear;
        SQL.Add('update clientes set [D_E_L_E_T=:a] where clientesCodigo = ' + variavel + '');
        Parameters.ParamByName('a').Value:=['*'];
        ExecSQL();
        Open;
      End;


     end;


   end;



